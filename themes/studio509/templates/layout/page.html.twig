
<div id="page">
  <header id="header" role="banner" aria-label="{{ 'Site header'|t }}" class="wrapper clearfix">
    <div class="container">
      {{ page.header }}
			{{ page.navbar_menu }}
			{{ page.navbar_search }}
    </div>
    <div class="container">
      {{ page.primary_menu }}
    </div>
  </header>

  {% if page.slider %}
    <div id="slider-wrapper" class="wrapper">
      <div class="container">
        {{ page.slider }}
      </div>
    </div>
  {% endif %}

  <div id="main-wrapper" class="wrapper">
    <div id="main" class="container">
      {{ page.breadcrumb }}

      {% if page.highlighted %}
        <div class="highlighted">
          <aside class="layout-container section clearfix" role="complementary">
            {{ page.highlighted }}
          </aside>
        </div>
      {% endif %}

      {% if page.featured_top %}
        <div class="featured-top">
          <aside class="featured-top__inner section layout-container clearfix" role="complementary">
            {{ page.featured_top }}
          </aside>
        </div>
      {% endif %}

      <main id="content" class="column main-content" role="main">
        <section class="section">
          <a id="main-content" tabindex="-1"></a>
          {{ page.content }}
        </section>
      </main>

      {% if page.sidebar_first %}
        <div id="sidebar-first" class="column sidebar">
          <aside class="section" role="complementary">
            {{ page.sidebar_first }}
          </aside>
        </div>
      {% endif %}

      {% if page.sidebar_second %}
        <div id="sidebar-second" class="column sidebar">
          <aside class="section" role="complementary">
            {{ page.sidebar_second }}
          </aside>
        </div>
      {% endif %}
    </div>
  </div>

  {% if page.featured_bottom_first or page.featured_bottom_second or page.featured_bottom_third %}
    <aside id="triptych" class="wrapper">

      {% if page.featured_bottom_first %}
        {{ page.featured_bottom_first }}
      {% endif %}

      {% if page.featured_bottom_second %}
        {{ page.featured_bottom_second }}
      {% endif %}

      {% if page.featured_bottom_third %}
        {{ page.featured_bottom_third }}
      {% endif %}

    </aside>
  {% endif %}

  <footer id="footer" class="wrapper">
	  {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
      <div class="container">

        <div class="site-footer_top row">
  		  {% if page.footer_first %}
  		  	<div class="col-12 col-sm-6 col-md-3 my-3">
            {{ page.footer_first }}
          </div>
  			{% endif %}

  			{% if page.footer_second %}
  			<div class="col-12 col-sm-6 col-md-3 my-3">
              {{ page.footer_second }}
  			</div>
  			{% endif %}

  			{% if page.footer_third %}
  			<div class="col-12 col-sm-6 col-md-3 my-3">
              {{ page.footer_third }}
  			</div>
  			{% endif %}

  			{% if page.footer_fourth %}
  			<div class="col-12 col-sm-6 col-md-3 my-3">
              {{ page.footer_fourth }}
  			</div>
  			{% endif %}
      </div>
	   </div>
	 {% endif %}

   <div class="container">

      {% include directory ~ '/templates/includes/socialmedia.html.twig' %}

      {% if page.footer_fifth %}
        <div class="site-footer_bottom ">
          {{ page.footer_fifth }}
        </div>
      {% endif %}

    </div>
  </footer>
</div>
